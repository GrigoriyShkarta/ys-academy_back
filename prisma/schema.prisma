generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  student
  admin
  super_admin
}

model User {
  id    Int     @default(autoincrement()) @id
  email     String   @unique
  name      String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  role      Role     @default(student)
  refreshToken String?  @map("refresh_token")

  Audio Audio[]
  Photo Photo[]
  Video Video[]

  userLessonAccesses UserLessonAccess[]
}

model UserLessonAccess {
  id        Int      @id @default(autoincrement())
  userId    Int
  lessonId  Int
  blocks    Int[]    @default([])
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  lesson    Lesson   @relation(fields: [lessonId], references: [id])
  @@unique([userId, lessonId])
}

model Module {
  id        Int       @id @default(autoincrement())
  title     String
  publicImgId    String?
  url   String?
  lessons   Lesson[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model Lesson {
  id        Int           @id @default(autoincrement())
  title     String
  index   Int?
  cover    String?
  content   Json @default("[]")
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
  moduleId  Int?
  module    Module?        @relation(fields: [moduleId], references: [id])

  userLessonAccesses UserLessonAccess[]
  categories  Category[] @relation("LessonCategories")

  @@index([moduleId, index])
}

enum LessonItemType {
  text
  video
  audio
  image
}

enum LessonItemSource {
  custom
  bank
  uploaded
}

model Audio {
  id          Int      @id @default(autoincrement())
  title       String
  url         String
  publicId    String
  createdAt   DateTime @default(now())
  // updatedAt DateTime   @updatedAt
  userId      Int?
  user        User?    @relation(fields: [userId], references: [id])

  // Связь с категориями
  categories  Category[] @relation("AudioCategories")
}

model Photo {
  id          Int      @id @default(autoincrement())
  title       String
  url         String
  publicId    String
  createdAt   DateTime @default(now())
  // updatedAt DateTime   @updatedAt
  userId      Int?
  user        User?    @relation(fields: [userId], references: [id])

  categories  Category[] @relation("PhotoCategories")
}

model Video {
  id          Int      @id @default(autoincrement())
  title       String
  url         String
  publicId    String?
  createdAt   DateTime @default(now())
  // updatedAt DateTime   @updatedAt
  userId      Int?
  user        User?    @relation(fields: [userId], references: [id])

  categories  Category[] @relation("VideoCategories")
}

model Category {
  id          Int      @id @default(autoincrement())
  title       String   @unique // обычно название категории уникально
  color String? @default("")

  // Обратные связи (имена должны совпадать с теми, что в @relation())
  audios      Audio[]  @relation("AudioCategories")
  photos      Photo[]  @relation("PhotoCategories")
  videos      Video[]  @relation("VideoCategories")
  lessons Lesson[] @relation("LessonCategories")

  createdAt   DateTime @default(now())
  updatedAt DateTime   @updatedAt
}


