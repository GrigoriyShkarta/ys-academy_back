generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  student
  admin
  super_admin
}

model User {
  id    Int     @default(autoincrement()) @id
  email     String   @unique
  name      String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  role      Role     @default(student)
  refreshToken String?  @map("refresh_token")

  Audio Audio[]
  Photo Photo[]
  Video Video[]
  Text Text[]
}

model Module {
  id        Int       @id @default(autoincrement())
  title     String
  publicImgId    String?
  url   String?
  lessons   Lesson[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model Lesson {
  id        Int           @id @default(autoincrement())
  index    Int?
  altTitles   Json?        @default("[]")
  title     String
  blocks    LessonBlock[]
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
  moduleId  Int?
  module    Module?        @relation(fields: [moduleId], references: [id])
}

model LessonBlock {
  id        Int           @id @default(autoincrement())
  index     Int
  title         String?       @default("Untitled Block")
  items     LessonItem[]
  lessonBlockId  Int
  lesson     Lesson     @relation(fields: [lessonBlockId], references: [id])
}

model LessonItem {
  id         Int        @id @default(autoincrement())
  type       LessonItemType
  source     LessonItemSource
  layout     Json       // layout храним в JSON
  orderIndex Int

  // связи с банками
  audioId    Int?
  videoId    Int?
  photoId    Int?
  textId     Int?

  audioPublicId String? // для удобства удаления из Cloudinary
  videoPublicId String?
  photoPublicId String?

  audio      Audio?     @relation(fields: [audioId], references: [id])
  video      Video?     @relation(fields: [videoId], references: [id])
  photo      Photo?     @relation(fields: [photoId], references: [id])
  text       Text?      @relation(fields: [textId], references: [id])

  // связь с уроком
  lessonId   Int
  lessonBlock     LessonBlock     @relation(fields: [lessonId], references: [id])

  // контент, если source = 'custom'
  content    String?
}

enum LessonItemType {
  text
  video
  audio
  image
}

enum LessonItemSource {
  custom
  bank
  uploaded
}

model Audio {
  id          Int      @id @default(autoincrement())
  title       String
  url         String
  publicId    String  // ID из Cloudinary (для удаления)
  tags        String[] // Массив тегов
  createdAt   DateTime @default(now())
  userId      Int?
  user        User?    @relation(fields: [userId], references: [id])
  lessonItems LessonItem[]
}

model Photo {
  id          Int      @id @default(autoincrement())
  title       String
  url         String
  publicId    String  // ID из Cloudinary (для удаления)
  tags        String[] // Массив тегов
  createdAt   DateTime @default(now())
  userId      Int?
  user        User?    @relation(fields: [userId], references: [id])
  lessonItems LessonItem[]
}

model Video {
  id          Int      @id @default(autoincrement())
  title       String
  url         String
  publicId    String?  // ID из Cloudinary (для удаления)
  tags        String[] // Массив тегов
  createdAt   DateTime @default(now())
  userId      Int?
  user        User?    @relation(fields: [userId], references: [id])
  lessonItems LessonItem[]
}

model Text {
  id          Int      @id @default(autoincrement())
  title       String
  content         String
  tags        String[] // Массив тегов
  createdAt   DateTime @default(now())
  userId      Int?
  user        User?    @relation(fields: [userId], references: [id])
  lessonItems LessonItem[]
}


