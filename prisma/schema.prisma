generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  student
  admin
  super_admin
}

model User {
  id    Int     @default(autoincrement()) @id
  email     String   @unique
  name      String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  role      Role     @default(student)
  refreshToken String?  @map("refresh_token")

  Audio Audio[]
  Photo Photo[]
  Video Video[]
  Text Text[]
}

model Module {
  id        Int       @id @default(autoincrement())
  title     String
  publicImgId    String?
  url   String?
  lessons   Lesson[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model Lesson {
  id        Int           @id @default(autoincrement())
  title     String
  index   Int?
  cover    String?
  content   Json @default("[]")
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
  moduleId  Int?
  module    Module?        @relation(fields: [moduleId], references: [id])
}

enum LessonItemType {
  text
  video
  audio
  image
}

enum LessonItemSource {
  custom
  bank
  uploaded
}

model Audio {
  id          Int      @id @default(autoincrement())
  title       String
  url         String
  publicId    String  // ID из Cloudinary (для удаления)
  tags        String[] // Массив тегов
  createdAt   DateTime @default(now())
  userId      Int?
  user        User?    @relation(fields: [userId], references: [id])
}

model Photo {
  id          Int      @id @default(autoincrement())
  title       String
  url         String
  publicId    String  // ID из Cloudinary (для удаления)
  tags        String[] // Массив тегов
  createdAt   DateTime @default(now())
  userId      Int?
  user        User?    @relation(fields: [userId], references: [id])
}

model Video {
  id          Int      @id @default(autoincrement())
  title       String
  url         String
  publicId    String?  // ID из Cloudinary (для удаления)
  tags        String[] // Массив тегов
  createdAt   DateTime @default(now())
  userId      Int?
  user        User?    @relation(fields: [userId], references: [id])
}

model Text {
  id          Int      @id @default(autoincrement())
  title       String
  content         String
  tags        String[] // Массив тегов
  createdAt   DateTime @default(now())
  userId      Int?
  user        User?    @relation(fields: [userId], references: [id])
}


