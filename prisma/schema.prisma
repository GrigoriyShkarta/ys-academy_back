generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  student
  admin
  super_admin
}

enum PaymentStatus {
  paid
  partial_paid
  unpaid
}

enum TrackerColumnId {
  plans // В плпнах
  homework // ДЗ
  songs // Пісні
  in_progress // В процесі
  completed // Виконено
  song_plans
  song_in_progress
  song_ready
}

model User {
  id                   Int       @id @default(autoincrement())
  email                String    @unique
  name                 String
  photo                String?
  photoId              String?
  city                 String?
  telegram             String?
  instagram            String?
  birthDate            DateTime?
  musicLevel           String?
  vocalExperience      String?
  goals                String?
  password             String
  isActive             Boolean   @default(true)
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
  role                 Role      @default(student)
  refreshToken         String?   @map("refresh_token")
  previousRefreshToken String?   @map("previous_refresh_token")
  accessExpiryDate     DateTime? @map("access_expiry_date")

  Audio Audio[]
  Photo Photo[]
  Video Video[]

  userLessonAccesses UserLessonAccess[]
  subscriptions      UserSubscription[]

  // Связь с трекером
  trackerTasks TrackerTask[]
}

model UserLessonAccess {
  id        Int      @id @default(autoincrement())
  userId    Int
  lessonId  Int
  blocks    Int[]    @default([])
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  lesson    Lesson   @relation(fields: [lessonId], references: [id], onDelete: Cascade)

  @@unique([userId, lessonId])
}

model Module {
  id          Int        @id @default(autoincrement())
  title       String
  publicImgId String?
  url         String?
  lessons     Lesson[]   @relation("ModuleLessons")
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  categories  Category[] @relation("ModuleCategories")
  courses     Course[]   @relation("CourseModules")

  moduleLessons ModuleLesson[]
}

model Course {
  id          Int        @id @default(autoincrement())
  url         String?
  publicImgId String?
  title       String
  categories  Category[] @relation("CourseCategories")
  modules     Module[]   @relation("CourseModules")
  createdAt   DateTime?  @default(now())
  updatedAt   DateTime?  @updatedAt
}

model Lesson {
  id          Int      @id @default(autoincrement())
  title       String
  cover       String?
  publicImgId String?
  content     Json     @default("[]")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  modules     Module[] @relation("ModuleLessons")

  moduleLessons ModuleLesson[]

  userLessonAccesses UserLessonAccess[]
  categories         Category[]         @relation("LessonCategories")

  audios Audio[] @relation("AudioLessons")
  photos Photo[] @relation("PhotoLessons")
  videos Video[] @relation("VideoLessons")
}

model ModuleLesson {
  id Int @id @default(autoincrement())

  moduleId Int
  lessonId Int

  order Int

  module Module @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  lesson Lesson @relation(fields: [lessonId], references: [id], onDelete: Cascade)

  @@unique([moduleId, lessonId])
  @@index([moduleId, order])
}

enum LessonItemType {
  text
  video
  audio
  image
}

enum LessonItemSource {
  custom
  bank
  uploaded
}

model Audio {
  id        Int      @id @default(autoincrement())
  title     String
  url       String
  publicId  String
  createdAt DateTime @default(now())
  userId    Int?
  user      User?    @relation(fields: [userId], references: [id])

  categories Category[] @relation("AudioCategories")
  lessons    Lesson[]   @relation("AudioLessons")
}

model Photo {
  id        Int      @id @default(autoincrement())
  title     String
  url       String
  publicId  String
  createdAt DateTime @default(now())
  userId    Int?
  user      User?    @relation(fields: [userId], references: [id])

  categories Category[] @relation("PhotoCategories")
  lessons    Lesson[]   @relation("PhotoLessons")
}

model Video {
  id        Int      @id @default(autoincrement())
  title     String
  url       String
  publicId  String?
  createdAt DateTime @default(now())
  userId    Int?
  user      User?    @relation(fields: [userId], references: [id])

  categories Category[] @relation("VideoCategories")
  lessons    Lesson[]   @relation("VideoLessons")
}

model Category {
  id    Int     @id @default(autoincrement())
  title String  @unique
  color String? @default("")

  audios  Audio[]  @relation("AudioCategories")
  photos  Photo[]  @relation("PhotoCategories")
  videos  Video[]  @relation("VideoCategories")
  lessons Lesson[] @relation("LessonCategories")
  modules Module[] @relation("ModuleCategories")
  courses Course[] @relation("CourseCategories")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UserSubscription {
  id             Int    @id @default(autoincrement())
  userId         Int
  subscriptionId Int
  paymentStatus  String @default("unpaid")
  amount         Int?

  lessonDates DateTime[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  student      User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  subscription Subscription @relation(fields: [subscriptionId], references: [id], onDelete: Cascade)
  lessons      UserLesson[]

  @@index([userId])
  @@index([subscriptionId])
}

enum LessonStatus {
  PENDING
  COMPLETED
  EXPIRED
  TRANSFERRED
  TRANSFER_REQUEST
}

model UserLesson {
  id                 Int @id @default(autoincrement())
  userSubscriptionId Int

  scheduledAt DateTime
  status      String   @default("pending")

  completedAt   DateTime?
  transferredTo DateTime?

  recordingUrl String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userSubscription UserSubscription @relation(fields: [userSubscriptionId], references: [id], onDelete: Cascade)

  @@index([userSubscriptionId])
  @@index([scheduledAt])
}

model Subscription {
  id            Int      @id @default(autoincrement())
  title         String   @unique
  price         Int
  lessons_count Int
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  userSubsriptions UserSubscription[]
}

// ============================================
// ТРЕКЕР МОДЕЛІ
// ============================================

model TrackerTask {
  id          Int             @id @default(autoincrement())
  userId      Int // Студент, якому належить задача
  title       String // Назва задачі
  description String?
  columnId    TrackerColumnId // Колонка (ДЗ, Пісні, В процесі, Виконено)
  order       Int             @default(0) // Порядок в колонці

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Зв'язки
  user     User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  subtasks TrackerSubtask[]

  @@index([userId])
  @@index([userId, columnId])
  @@index([userId, columnId, order])
}

model TrackerSubtask {
  id        Int     @id @default(autoincrement())
  taskId    Int // Задача, до якої належить підзадача
  title     String // Назва підзадачі
  completed Boolean @default(false) // Виконано чи ні

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Зв'язки
  task TrackerTask @relation(fields: [taskId], references: [id], onDelete: Cascade)

  @@index([taskId])
}
