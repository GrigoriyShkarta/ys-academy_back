generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  student
  admin
  super_admin
}

enum PaymentStatus {
  paid
  partial_paid
  unpaid
}

model User {
  id                   Int       @id @default(autoincrement())
  email                String    @unique
  name                 String
  photo                String?
  photoId              String?
  city                 String?
  telegram             String?
  instagram            String?
  birthDate            DateTime?
  musicLevel           String?
  vocalExperience      String?
  goals                String?
  password             String
  isActive             Boolean   @default(true)
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
  role                 Role      @default(student)
  refreshToken         String?   @map("refresh_token")
  previousRefreshToken String?   @map("previous_refresh_token")

  Audio Audio[]
  Photo Photo[]
  Video Video[]

  userLessonAccesses UserLessonAccess[]
  subscriptions      UserSubscription[]
}

model UserLessonAccess {
  id        Int      @id @default(autoincrement())
  userId    Int
  lessonId  Int
  blocks    Int[]    @default([])
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  lesson    Lesson   @relation(fields: [lessonId], references: [id], onDelete: Cascade)

  @@unique([userId, lessonId])
}

model Module {
  id          Int        @id @default(autoincrement())
  title       String
  publicImgId String?
  url         String?
  lessons     Lesson[]   @relation("ModuleLessons")
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  categories  Category[] @relation("ModuleCategories")
  courses     Course[]   @relation("CourseModules")

  moduleLessons ModuleLesson[]
}

model Course {
  id          Int        @id @default(autoincrement())
  url         String?
  publicImgId String?
  title       String
  categories  Category[] @relation("CourseCategories")
  modules     Module[]   @relation("CourseModules")
  createdAt   DateTime?  @default(now())
  updatedAt   DateTime?  @updatedAt
}

model Lesson {
  id          Int      @id @default(autoincrement())
  title       String
  cover       String?
  publicImgId String?
  content     Json     @default("[]")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  modules     Module[] @relation("ModuleLessons")

  moduleLessons ModuleLesson[]

  userLessonAccesses UserLessonAccess[]
  categories         Category[]         @relation("LessonCategories")

  audios Audio[] @relation("AudioLessons")
  photos Photo[] @relation("PhotoLessons")
  videos Video[] @relation("VideoLessons")
}

model ModuleLesson {
  id Int @id @default(autoincrement())

  moduleId Int
  lessonId Int

  order Int

  module Module @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  lesson Lesson @relation(fields: [lessonId], references: [id], onDelete: Cascade)

  @@unique([moduleId, lessonId])
  @@index([moduleId, order])
}

enum LessonItemType {
  text
  video
  audio
  image
}

enum LessonItemSource {
  custom
  bank
  uploaded
}

model Audio {
  id        Int      @id @default(autoincrement())
  title     String
  url       String
  publicId  String
  createdAt DateTime @default(now())
  // updatedAt DateTime   @updatedAt
  userId    Int?
  user      User?    @relation(fields: [userId], references: [id])

  // Связь с категориями
  categories Category[] @relation("AudioCategories")
  lessons    Lesson[]   @relation("AudioLessons")
}

model Photo {
  id        Int      @id @default(autoincrement())
  title     String
  url       String
  publicId  String
  createdAt DateTime @default(now())
  // updatedAt DateTime   @updatedAt
  userId    Int?
  user      User?    @relation(fields: [userId], references: [id])

  categories Category[] @relation("PhotoCategories")
  lessons    Lesson[]   @relation("PhotoLessons")
}

model Video {
  id        Int      @id @default(autoincrement())
  title     String
  url       String
  publicId  String?
  createdAt DateTime @default(now())
  // updatedAt DateTime   @updatedAt
  userId    Int?
  user      User?    @relation(fields: [userId], references: [id])

  categories Category[] @relation("VideoCategories")
  lessons    Lesson[]   @relation("VideoLessons")
}

model Category {
  id    Int     @id @default(autoincrement())
  title String  @unique // обычно название категории уникально
  color String? @default("")

  // Обратные связи (имена должны совпадать с теми, что в @relation())
  audios  Audio[]  @relation("AudioCategories")
  photos  Photo[]  @relation("PhotoCategories")
  videos  Video[]  @relation("VideoCategories")
  lessons Lesson[] @relation("LessonCategories")
  modules Module[] @relation("ModuleCategories")
  courses Course[] @relation("CourseCategories")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UserSubscription {
  id             Int    @id @default(autoincrement())
  userId         Int
  subscriptionId Int
  paymentStatus  String @default("unpaid")
  amount         Int?

  // Даты и время уроков (по одному на урок)
  lessonDates DateTime[] // массив ISO строк с датой и временем

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Связи
  student      User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  subscription Subscription @relation(fields: [subscriptionId], references: [id], onDelete: Cascade)
  lessons      UserLesson[]

  @@index([userId])
  @@index([subscriptionId])
}

enum LessonStatus {
  PENDING // Не проведён (по умолчанию)
  COMPLETED // Проведён
  EXPIRED // Сгорел
  TRANSFERRED // Перенесён (уже перенесён на другую дату)
  TRANSFER_REQUEST // Запрос на перенос
}

model UserLesson {
  id                 Int @id @default(autoincrement())
  userSubscriptionId Int

  scheduledAt DateTime // Запланированная дата и время урока
  status      String   @default("pending")

  completedAt   DateTime? // Когда урок был проведён (если COMPLETED)
  transferredTo DateTime? // Новая дата, если был перенесён

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Связь с подпиской студента
  userSubscription UserSubscription @relation(fields: [userSubscriptionId], references: [id], onDelete: Cascade)

  @@index([userSubscriptionId])
  @@index([scheduledAt])
}

model Subscription {
  id            Int      @id @default(autoincrement())
  title         String   @unique
  price         Int
  lessons_count Int
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  userSubsriptions UserSubscription[]
}
